{
  "target_regions": [
    "北京",
    "上海",
    "广东",
    "江苏",
    "浙江",
    "山东",
    "河南",
    "四川",
    "湖北",
    "湖南"
  ],
  "data_sources": {
    "wechat": {
      "enabled": true,
      "priority": 0,
      "max_results": 30,
      "description": "搜狗微信搜索数据源"
    },
    "gov_websites": {
      "enabled": true,
      "priority": 1,
      "sites": {
        "教育部": "http://www.moe.gov.cn/",
        "北京": "http://jw.beijing.gov.cn/",
        "上海": "https://www.shmeea.edu.cn/",
        "广东": "http://edu.gd.gov.cn/",
        "江苏": "http://jyt.jiangsu.gov.cn/",
        "浙江": "http://jyt.zj.gov.cn/"
      }
    },
    "job_sites": {
      "enabled": true,
      "priority": 2,
      "sites": {
        "教师招聘网": "https://www.jiaoshi.com.cn",
        "高校人才网": "https://www.gaoxiaojob.com"
      }
    },
    "experience_platforms": {
      "enabled": true,
      "priority": 3
    }
  },
  "filters": {
    "interview_keywords": [
      "结构化面试",
      "面试安排",
      "面试通知",
      "面试公告",
      "答辩",
      "面试时间"
    ],
    "exclude_keywords": ["试讲", "说课"],
    "max_age_days": 90
  },
  "ai_config": {
    "model": "glm-4-plus",
    "max_tokens": 8192,
    "temperature": 0.3,
    "base_url": "https://open.bigmodel.cn/api/anthropic"
  },
  "output": {
    "digests_dir": "digests",
    "date_format": "%Y-%m-%d",
    "enable_wechat": true
  }
}
